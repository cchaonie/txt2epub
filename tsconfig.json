{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "target": "ES2017",
    "module": "esnext"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ]
}