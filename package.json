{
  "name": "txt2epub",
  "bin": "./bin/index.js",
  "version": "1.0.2",
  "description": "A simple tool to convert txt file to epub html files",
  "main": "lib/index.js",
  "repository": "https://github.com/cchaonie/txt2epub.git",
  "scripts": {
    "build": "rimraf ./lib && rollup -c rollup.config.mjs",
    "format": "prettier --write --ignore-unknown ./src/**/*.ts",
    "lint": "eslint --ext .ts src/",
    "prepare": "husky install",
    "test": "jest"
  },
  "files": [
    "lib",
    "bin",
    "templates"
  ],
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "keywords": [
    "txt",
    "epub"
  ],
  "packageManager": "pnpm@7.12.2",
  "author": "cchaonie (nc_8093@163.com)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.8",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "archiver": "^5.3.1",
    "cheerio": "1.0.0-rc.12",
    "cross-env": "^7.0.3",
    "diacritics": "^1.3.0",
    "ejs": "^3.1.8",
    "entities": "^4.4.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "is-builtin-module": "^3.2.0",
    "jest": "^29",
    "lint-staged": "^13.1.0",
    "mime": "^3.0.0",
    "prettier": "2.8.1",
    "q": "^1.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.10.0",
    "rollup-plugin-re": "^1.0.7",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.8.3",
    "underscore": "^1.13.6",
    "uslug": "^1.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.{ts, js}": [
      "eslint",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yaml,yml}": "prettier --write"
  }
}
