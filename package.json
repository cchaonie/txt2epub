{
  "name": "txt2epub",
  "bin": "./bin/index.js",
  "version": "1.0.1",
  "description": "A simple tool to convert txt file to epub html files",
  "main": "lib/index.js",
  "repository": "https://github.com/cchaonie/txt2epub.git",
  "scripts": {
    "build": "rimraf ./lib && tsc",
    "format": "prettier --write --ignore-unknown",
    "lint": "eslint --ext .ts src/",
    "prepare": "husky install",
    "test": "jest"
  },
  "keywords": [
    "txt",
    "epub"
  ],
  "packageManager": "pnpm@7.12.2",
  "author": "cchaonie",
  "license": "MIT",
  "dependencies": {
    "epub-gen": "^0.1.0",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "jest": "^28.1.3",
    "lint-staged": "^13.1.0",
    "prettier": "2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "lint-staged": {
    "src/*": "pnpm lint && pnpm format && pnpm test"
  }
}
